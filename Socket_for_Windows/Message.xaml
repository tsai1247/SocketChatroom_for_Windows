<UserControl x:Class="Socket_for_Windows.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Socket_for_Windows"
             mc:Ignorable="d"
             Height="150">
    <Grid Background="Yellow">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="name" Text="tsai1247" Grid.Row="0"
            FontSize="16"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="content" Text="fadtestadfsasfdasdf"
                TextWrapping="Wrap" Grid.Column="1" Height="Auto"
                FontSize="25"/>
            <TextBlock x:Name="timestamp" Text="11:55" Grid.Column="2"
                FontSize="16" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</UserControl>
